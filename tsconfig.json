{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "global.d.ts"
  ]
}